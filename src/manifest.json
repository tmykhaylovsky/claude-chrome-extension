{
  "manifest_version": 3,
  "name": "Claude AI Assistant",
  "version": "1.0",
  "description": "テキストをClaudeに送信して応答を表示する拡張機能",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "options_page": "options.html",
  "host_permissions": [
    "https://api.anthropic.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
